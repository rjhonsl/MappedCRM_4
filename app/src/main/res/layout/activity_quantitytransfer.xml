<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

        <include layout="@layout/header"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:elevation="3dp"
                      android:background="@color/gray_100"
                      android:orientation="horizontal">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:padding="15dp"
                     android:text="Header"
                     android:maxLines="2"
                      android:layout_weight="8"
                     android:id="@+id/txtHeader_QuantityTransfer"/>

            <ImageButton android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_weight="2"
                         android:padding="20dp"
                         android:background="@drawable/bg_material_transparent"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        </LinearLayout>



        <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:elevation="2dp"
                  android:id="@+id/lv_ponds"
                />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0"
                  android:orientation="horizontal"
                  android:layout_gravity="center|bottom">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change Qty"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/btnchangeqty"
                android:drawableTop="@drawable/ic_edit_black_24dp"
                android:background="@drawable/bg_material_transparent"
        />

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Case"
                android:id="@+id/btnNewCase"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableTop="@drawable/ic_add_black_24dp"
                android:background="@drawable/bg_material_transparent"
        />

        <!--<Button android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:text="Transfer Qty"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:paddingTop="10dp"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:drawableTop="@drawable/ic_swap_horiz_black_24dp"-->
                <!--android:background="@drawable/bg_material_transparent"-->
        <!--/>-->


    </LinearLayout>


</LinearLayout>
