<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:background="@drawable/bg_material_transparent"
                     android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                     android:layout_weight="1"
                     android:id="@+id/btn_title_left"
            />
        <TextView
            android:text=" Viewing Options"
            android:layout_marginLeft="0dp"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:id="@+id/txt_title"
            android:textColor="@color/gray_50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            />


        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:background="@drawable/bg_material_transparent"
                     android:src="@drawable/ic_filler24dp"
                     android:layout_weight="1"
                     android:id="@+id/btn_title_right"
            />

    </LinearLayout>

    <TextView
        android:padding="20dp"
        android:textSize="18sp"
        android:textColor="@color/gray_700"
        android:textStyle="normal"
        android:id="@+id/txt_farmoptions_managePonds"
        android:background="@drawable/bg_white_box_noshadow"
        android:drawableLeft="@drawable/ic_people_darkteal_24dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="      Manage Ponds"
        />

    <View android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="#eaeaea"
        />

    <TextView
        android:padding="20dp"
        android:textSize="18sp"
        android:textColor="@color/gray_700"
        android:textStyle="normal"
        android:id="@+id/txt_farmoptions_harvest_history"
        android:background="@drawable/bg_white_box_noshadow"
        android:drawableLeft="@drawable/ic_stats_darkteal_24dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="      Harvest History"
        />



</LinearLayout>
