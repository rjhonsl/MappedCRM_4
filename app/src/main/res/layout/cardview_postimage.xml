                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="3dp"-->
                <!--android:id="@+id/txtlinkshare"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="13sp"-->
                <!--android:text="Share" />-->
                <!--</LinearLayout>-->

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
