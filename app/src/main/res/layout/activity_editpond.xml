<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                    android:layout_weight="1">
        <LinearLayout
            android:id="@+id/ll_titlebar"
            android:background="@color/blue"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
        >

            <ImageButton
                android:layout_weight="1"
                android:id="@+id/btn_title_left"
                android:background="@drawable/ripple_v21"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:text="Case Details"
                android:gravity="center"
                android:id="@+id/title"
                android:textSize="19sp"
                android:layout_weight="8"
                android:background="@drawable/ripple_v21"
                android:textColor="@color/background_material_light"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageButton
                android:layout_weight="1"
                android:background="@drawable/bg_material_transparent"
                android:src="@drawable/ic_filler24dp"
                android:layout_width="0dp"
                android:clickable="false"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <ScrollView android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="vertical"
                          android:paddingLeft="10dp"
                          android:paddingRight="10dp"
            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="13sp"
                          android:textColor="@color/red_600"
                          android:text="NOTE: Pond Number should be same if pond is multi-culture"
                          android:paddingLeft="7dp"
                          android:paddingRight="7dp"
                          android:paddingTop="7dp"
                />


                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"
                              android:text="Pond Number"
                    />

                    <EditText android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/edtpondnumber"
                              android:inputType="number"
                    />

                </LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"

                              android:text="Specie"
                    />

                    <EditText android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:focusable="false"
                              android:id="@+id/edtSpecie"
                              android:drawableRight="@drawable/ic_keyboard_arrow_down_darkgreen_24dp"
                    />

                </LinearLayout>


                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"
                              android:text="ABW(g)"
                    />

                    <EditText android:layout_width="fill_parent"
                              android:id="@+id/edtAbw"
                              android:inputType="number"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"

                              android:text="Survival Rate(%)"
                    />

                    <EditText android:layout_width="fill_parent"
                              android:id="@+id/edtSurvivalRate"
                              android:inputType="number"
                              android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"
                              android:text="Date Stocked"
                    />

                    <EditText android:layout_width="fill_parent"
                              android:focusable="false"
                              android:id="@+id/edtDateStocked"
                              android:drawableRight="@drawable/ic_event_darkteal_24dp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"

                              android:text="Quantity"
                    />

                    <EditText android:layout_width="fill_parent"
                              android:id="@+id/edtQuantity"
                              android:inputType="number"
                              android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"

                              android:text="Area(mÂ²)"
                    />


                    <EditText android:layout_width="fill_parent"
                              android:id="@+id/edtArea"
                              android:inputType="number"
                              android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"

                              android:text="Culture System"
                    />

                    <EditText android:layout_width="fill_parent"
                              android:id="@+id/edtCultureSystem"
                              android:drawableRight="@drawable/ic_keyboard_arrow_down_darkgreen_24dp"
                              android:focusable="false"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="5dp">

                    <TextView android:layout_width="140dp"
                              android:layout_height="wrap_content"
                              android:textSize="14sp"
                              android:textColor="@color/gray_600"

                              android:text="Remarks"
                    />

                    <EditText android:layout_width="fill_parent"
                              android:id="@+id/edtRemarks"
                              android:layout_height="wrap_content"/>

                </LinearLayout>




            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_weight="0"
    >

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPondQuantityTransfer"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/ic_swap_horiz_black_24dp"
                android:textColor="@color/gray_700"
                android:background="@drawable/bg_material_transparent"
                android:text="  Transfer Quantity"
                android:layout_weight="1"
        />

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSave"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/ic_save_black_24dp"
                android:textColor="@color/gray_700"
                android:background="@drawable/bg_material_transparent"
                android:text="  SAVE"
                android:layout_weight="1"
        />


    </LinearLayout>

</LinearLayout>